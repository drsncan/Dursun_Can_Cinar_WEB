@using DmsWeb.Data
@using DmsWeb.Models
@inject AppDbContext Db

@{
    var title = ViewData["Title"] as string ?? "Döküman Yönetim Sistemi";

    // Veritabanından ilk ayar kaydını çek
    var settings = Db.SystemSettings.FirstOrDefault()
                  ?? new SystemSettings
                  {
                      SystemName = "Döküman Yönetim Sistemi",
                      InstitutionName = "Ankara Üniversitesi",
                      LogoPath = null
                  };
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <title>@title</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback" />
    <!-- Font Awesome -->
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" />
    <!-- AdminLTE -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/css/adminlte.min.css" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>

<body class="hold-transition sidebar-mini layout-fixed">

    @if (User.Identity?.IsAuthenticated == true)
    {
        <!-- ====== PANEL LAYOUT (LOGIN OLMUŞ KULLANICI) ====== -->
        <div class="wrapper">

            <!-- Navbar -->
            <nav class="main-header navbar navbar-expand navbar-white navbar-light">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" data-widget="pushmenu" href="#"><i class="fas fa-bars"></i></a>
                    </li>
                    <li class="nav-item d-none d-sm-inline-block">
                        <a href="@Url.Action("Index", "Home")" class="nav-link">
                            @settings.SystemName
                        </a>
                    </li>
                </ul>

                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <span class="mr-2">
                            <i class="fa-solid fa-user"></i> @User.Identity!.Name
                        </span>
                        <form asp-controller="Auth" asp-action="Logout" method="post" class="d-inline">
                            <button type="submit" class="btn btn-sm btn-outline-secondary">Çıkış</button>
                        </form>
                    </li>
                </ul>
            </nav>

            <!-- Main Sidebar Container -->
            <aside class="main-sidebar sidebar-dark-primary elevation-4" style="background-color:#3b2719;">

                <!-- Brand Logo -->
                <a href="@Url.Action("Index", "Home")" class="brand-link">
                    @if (!string.IsNullOrEmpty(settings.LogoPath))
                    {
                        <img src="@settings.LogoPath"
                             alt="Logo"
                             class="brand-image img-circle elevation-3"
                             style="opacity:.9; object-fit:contain;" />
                    }
                    else
                    {
                        <i class="fa-solid fa-file-lines ml-2 mr-2"></i>
                    }

                    <span class="brand-text font-weight-light d-block">
                        @settings.SystemName
                    </span>
                    <small class="text-xs text-muted d-block">
                        @settings.InstitutionName
                    </small>
                </a>

                <!-- Sidebar -->
                <div class="sidebar">
                    <nav class="mt-2">
                        <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu">
                            <li class="nav-item">
                                <a href="@Url.Action("Index", "Home")"
                                   class="nav-link @(ViewBag.ActiveMenu == "Home" ? "active" : "")">
                                    <i class="nav-icon fa-solid fa-gauge-high"></i>
                                    <p>Ana Sayfa</p>
                                </a>
                            </li>

                            <li class="nav-item">
                                <a href="@Url.Action("Index", "Documents")"
                                   class="nav-link @(ViewBag.ActiveMenu == "Documents" ? "active" : "")">
                                    <i class="nav-icon fa-solid fa-folder-open"></i>
                                    <p>Belgeler</p>
                                </a>
                            </li>

                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a href="@Url.Action("Index", "Approvals")"
                                       class="nav-link @(ViewBag.ActiveMenu == "Approvals" ? "active" : "")">
                                        <i class="nav-icon fa-solid fa-check-double"></i>
                                        <p>Onay Süreçleri</p>
                                    </a>
                                </li>
                            }

                            <li class="nav-item">
                                <a href="@Url.Action("Index", "Users")"
                                   class="nav-link @(ViewBag.ActiveMenu == "Users" ? "active" : "")">
                                    <i class="nav-icon fa-solid fa-users"></i>
                                    <p>Kullanıcılar</p>
                                </a>
                            </li>

                            <li class="nav-item">
                                <a href="@Url.Action("Index", "Settings")"
                                   class="nav-link @(ViewBag.ActiveMenu == "Settings" ? "active" : "")">
                                    <i class="nav-icon fa-solid fa-gear"></i>
                                    <p>Sistem Ayarları</p>
                                </a>
                            </li>
                        </ul>
                    </nav>
                </div>
                <!-- /.sidebar -->
            </aside>

            <!-- Content Wrapper -->
            <div class="content-wrapper">
                <section class="content-header">
                    <div class="container-fluid">
                        @RenderSection("PageHeader", required: false)
                    </div>
                </section>

                <section class="content">
                    <div class="container-fluid">
                        @RenderBody()
                    </div>
                </section>
            </div>

            <footer class="main-footer text-sm">
                <strong>@settings.SystemName</strong> - @DateTime.Now.Year
            </footer>
        </div>
    }
    else
    {
        
        <!-- ====== LOGIN / REGISTER LAYOUT (MİSAFİR) ====== -->
        <div class="d-flex align-items-center justify-content-center login-bg">
            <div class="login-card">
                @RenderBody()
            </div>
        </div>
    }

    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/js/adminlte.min.js"></script>

    @RenderSection("Scripts", required: false)

</body>
</html>
