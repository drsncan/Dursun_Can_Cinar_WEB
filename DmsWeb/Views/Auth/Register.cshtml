@model DmsWeb.Models.RegisterViewModel

@{
    ViewData["Title"] = "Kayıt Ol";
}

<div class="card shadow-sm">
    <div class="card-header text-center">
        <h4 class="mb-1">Döküman Yönetim Sistemi</h4>
        <small class="text-muted">Yeni kullanıcı oluştur</small>
    </div>

    <div class="card-body">
        <form asp-action="Register" method="post">
            @Html.AntiForgeryToken()

            <div class="form-group mb-2">
                <label asp-for="Username">Kullanıcı Adı</label>
                <input asp-for="Username" class="form-control" autocomplete="username" />
            </div>

            <div class="form-group mb-2">
                <label asp-for="FullName">Ad Soyad</label>
                <input asp-for="FullName" class="form-control" />
            </div>

            <div class="form-group mb-2">
                <label asp-for="Password">Şifre</label>
                <input asp-for="Password" class="form-control" type="password" autocomplete="new-password" />
            </div>

            <div class="form-group mb-2">
                <label asp-for="ConfirmPassword">Şifre (Tekrar)</label>
                <input asp-for="ConfirmPassword" class="form-control" type="password" autocomplete="new-password" />
            </div>

            <div asp-validation-summary="All" class="text-danger small mt-2"></div>

            <button type="submit" class="btn btn-primary w-100 mt-3">
                Kayıt Ol
            </button>
        </form>
    </div>

    <div class="card-footer text-center">
        <span class="small text-muted">Zaten hesabın var mı?</span>
        <a asp-action="Login" class="small ml-1">Giriş yap</a>
    </div>
</div>
