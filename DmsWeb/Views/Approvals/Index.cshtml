@model IEnumerable<DmsWeb.Models.Document>

@{
    ViewData["Title"] = "Onay Süreçleri";
    ViewBag.ActiveMenu = "Approvals";
}

@section PageHeader {
    <div class="row mb-2">
        <div class="col-sm-6">
            <h1 class="page-title">
                <i class="fa-solid fa-check-to-slot mr-2"></i> Onay Bekleyen Belgeler
            </h1>
        </div>
    </div>
}

<div class="dms-card">
    @if (!Model.Any())
    {
        <p class="text-muted mb-0">Şu anda onay bekleyen belge bulunmamaktadır.</p>
    }
    else
    {
        <table class="table table-striped table-hover table-sm mb-0">
            <thead>
                <tr>
                    <th>Belge No</th>
                    <th>Başlık</th>
                    <th>Oluşturan</th>
                    <th>Oluşturma Tarihi</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
            @foreach (var doc in Model)
            {
                <tr>
                    <td>@doc.Number</td>
                    <td>@doc.Title</td>
                    <td>@doc.CreatedBy</td>
                    <td>@doc.CreatedAt.ToString("dd.MM.yyyy HH:mm")</td>
                    <td>
                        <a href="@Url.Action("Details", "Documents", new { id = doc.Id })"
                           class="btn btn-xs btn-outline-secondary mr-1">
                            Detay
                        </a>

                        <form asp-action="Approve"
                              method="post"
                              class="d-inline">
                            <input type="hidden" name="id" value="@doc.Id" />
                            <button type="submit"
                                    class="btn btn-xs btn-success mr-1">
                                Onayla
                            </button>
                        </form>

                        <form asp-action="Reject"
                              method="post"
                              class="d-inline"
                              onsubmit="return confirm('Bu belgeyi reddetmek istediğinize emin misiniz?');">
                            <input type="hidden" name="id" value="@doc.Id" />
                            <input type="hidden" name="reason" value="Manuel red" />
                            <button type="submit"
                                    class="btn btn-xs btn-danger">
                                Reddet
                            </button>
                        </form>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    }
</div>
